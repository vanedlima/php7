<!Doctype HTML>
<html>
	<head>
		<title>
			iContador com While
		</title>
	</head>
		<body>
			<?php
			$contador =1;
			While ($contador < 11)
			{ echo str_pad($contador,11);
			echo "";
			$contador ++;}
			echo "<br/>";
			
			$contador =1;
			do { echo str_pad($contador,11);
			echo "";
			$contador ++;} While ($contador < 11);
			?>
		</body>
</html>
